{% extends 'base.html.twig' %}

{% block title %}Billeteries{% endblock %}

{% block body %}
    <div class="wrapper bgded overlay" style="background-image:url({{ asset('images/imagemiss.jpg') }});">
        <div class="page-title text-center wow fadeInRightBig"><h1 class="heading">Billeteries</h1></div>
    </div>
    <div class="row pt-20" style="background-color: #f9f9f9">
        <div class="col-xl-8 offset-xl-2">
            <div class="sec-title text-center black wow bounceIn">
                <span></span>
                <h3>Billeteries</h3>
                <p></p>
            </div><!-- /.sec-title -->
        </div>
    </div>
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <h3 class="h3 text-success"><i class="fa fa-hand-o-right"></i> Grand Littoral</h3>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-center text-uppercase">Standard - 2000 FCFA</h4>
                    </div>
                    <div class="card-img">
                        <img src="{{ asset('images/lt22.jpeg') }}">
                    </div>
                    <div class="card-footer">
                        <a  href="{{ path('billeteriespay', {'indice': 1,'region':'littoral'}) }}" class="btn btn-success btn-block">Je paye</a>
                    </div></div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-center text-uppercase">Gold - 5000 FCFA</h4>
                    </div>
                        <div class="card-img">
                            <img src="{{ asset('images/lt5.jpeg') }}">
                        </div>
                    <div class="card-footer">
                        <a href="{{ path('billeteriespay', {'indice': 2,'region':'littoral'}) }}" class="btn btn-primary btn-block">Je paye</a>
                    </div></div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-center text-uppercase">VIP - 10000 FCFA</h4>
                    </div>
                        <div class="card-img">
                            <img src="{{ asset('images/lt10.jpeg') }}">
                        </div>
                    <div class="card-footer">
                        <a href="{{ path('billeteriespay', {'indice': 3,'region':'littoral'}) }}" class="btn btn-warning btn-block">Je paye</a>
                    </div></div>
                </div>

            </div>
            <hr>
            <h3 class="h3 text-danger"><i class="fa fa-hand-o-right"></i> Grand Centre</h3>
            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title text-center text-uppercase">Standard - 2000 FCFA</h4>
                        </div>
                        <div class="card-img">
                            <img src="{{ asset('images/gc2.jpeg') }}">
                        </div>
                        <div class="card-footer">
                            <a  href="{{ path('billeteriespay', {'indice': 1,'region':'centre'}) }}" class="btn btn-success btn-block">Je paye</a>
                        </div></div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title text-center text-uppercase">Gold - 5000 FCFA</h4>
                        </div>
                        <div class="card-img">
                            <img src="{{ asset('images/gc5.jpeg') }}">
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('billeteriespay', {'indice': 2,'region':'centre'}) }}" class="btn btn-primary btn-block">Je paye</a>
                        </div></div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title text-center text-uppercase">VIP - 10000 FCFA</h4>
                        </div>
                        <div class="card-img">
                            <img src="{{ asset('images/gc10.jpeg') }}">
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('billeteriespay', {'indice': 3,'region':'centre'}) }}" class="btn btn-warning btn-block">Je paye</a>
                        </div></div>
                </div>

            </div>
        </div>
    </div>
    <div class="brand-carousel-wrapper light-blue-bg  wow fadeIn">
        <div class="container">
            <div class="brand-carousel owl-carousel owl-theme">
                {% for partenaire in partenaires %}
                    {% if partenaire.logo %}
                        <div class="item">
                            <img src="{{ asset('uploads/logo/' ~ partenaire.logo) }}">
                        </div>
                    {% else %}
                        <div class="item">
                            <img src="{{ asset('images/brand-1.png') }}">
                        </div>
                    {% endif %}
                {% endfor %}
            </div><!-- /.brand-carousel -->
        </div><!-- /.thm-container -->
    </div>
{% endblock %}
