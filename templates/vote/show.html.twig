{% extends 'baseback.html.twig' %}

{% block title %}Vote{% endblock %}

{% block body %}
    <h1>Vote</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vote.id }}</td>
            </tr>
            <tr>
                <th>NombreVote</th>
                <td>{{ vote.nombreVote }}</td>
            </tr>
            <tr>
                <th>Monaie</th>
                <td>{{ vote.monaie }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ vote.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ vote.createdAt ? vote.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ vote.updatedAt ? vote.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vote_index') }}">back to list</a>

    <a href="{{ path('vote_edit', {'id': vote.id}) }}">edit</a>

