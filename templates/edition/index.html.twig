{% extends 'baseback.html.twig' %}

{% block title %}Editions{% endblock %}

{% block body %}
<div class="content">
    <div class="card card-stats">
        <div class="card-header">
            <a class="btn btn-dark" href="{{ path('edition_new') }}">Ajouter</a>
        </div>
        <div class="card-body ">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Status</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edition in editions %}
            <tr>
                <td>{{ edition.id }}</td>
                <td>{{ edition.libelle }}</td>
                <td>{{ edition.status }}</td>
                <td>{{ edition.createdAt ? edition.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ edition.updatedAt ? edition.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td><div class="btn-group btn-group-sm">
                    <a class="btn btn-success" href="{{ path('edition_show', {'id': edition.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('edition_edit', {'id': edition.id}) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


        </div></div></div>
{% endblock %}
