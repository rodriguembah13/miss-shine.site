{% extends 'baseback.html.twig' %}

{% block title %}Modifier Candidat{% endblock %}

{% block body %}
<div class="content">
    <div class="card card-stats">
        <div class="card-body ">
            <div class="row">
                <div class="col-md-9">
                    {{ include('candidat/_form.html.twig', {'button_label': 'Modifier'}) }}
                </div>
                <div class="col-md-3">
                    {% if candidat.photo is defined and candidat.photo  is not null %}
                        <img id="img_emp" class="img img-responsive img-thumbnail" style="width:200px;height: 200px"
                             src="{{ asset('uploads/' ~ candidat.photo) }}" title="my image"
                             alt="My image">
                    {% else %}  <img id="img_emp" class="img img-responsive img-thumbnail" style="width:50px;height: 50px"
                                     src="{{ asset('build/images/default_avatar.png') }}" title="my image"
                                     alt="My image">
                    {% endif %}
                </div>
            </div>

        </div></div></div>
{% endblock %}
