{% extends 'baseback.html.twig' %}

{% block title %}Nouvelle Candidate{% endblock %}

{% block body %}
    <div class="content">
        <div class="card card-stats">
            <div class="card-body ">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.edition) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.imageFilename) }}
                    </div>
                </div>
                {{ form_row(form.description) }}
                {{ form_row(form.projet) }}
                {{ form_row(form.descriptionprojet) }}
                <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
                {{ form_end(form) }}
                {# {{ include('candidat/_form.html.twig') }} #}

            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
{% endblock %}
