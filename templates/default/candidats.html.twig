{% extends 'base.html.twig' %}
{% block title %}
    Miss-shine Candidats
{% endblock %}
{% block body %}
    <div class="wrapper bgded overlay" style="background-image:url('../images/demo/backgrounds/01.png');">
        <div class="page-title text-center"><h1 class="heading">Candidats</h1></div>
        <div id="mauticform_wrapper_formulairecva" class="mauticform_wrapper">
            <form autocomplete="false" role="form" method="post"
                  action="https://smartworldafriq.com/mautic/form/submit?formId=11" id="mauticform_formulairecva"
                  data-mautic-form="formulairecva" enctype="multipart/form-data">
                <div class="mauticform-error" id="mauticform_formulairecva_error"></div>
                <div class="mauticform-message" id="mauticform_formulairecva_message"></div>
                <div class="mauticform-innerform">
                    <div class="mauticform-page-wrapper mauticform-page-1" data-mautic-form-page="1">
                        <div id="mauticform_formulairecva_prenom" data-validate="prenom" data-validation-type="text"
                             class="mauticform-row mauticform-text mauticform-field-1 mauticform-required"><input
                                    id="mauticform_input_formulairecva_prenom" name="mauticform[prenom]" value=""
                                    placeholder="Prénom" style="width: 100%; height: 50px;" class="mauticform-input"
                                    type="text"/><br/> <span class="mauticform-errormsg" style="display: none;">This is required.</span>
                        </div>
                        <div id="mauticform_formulairecva_email" data-validate="email" data-validation-type="email"
                             class="mauticform-row mauticform-email mauticform-field-2 mauticform-required"><input
                                    id="mauticform_input_formulairecva_email" name="mauticform[email]" value=""
                                    placeholder="email" style="width: 100%; height: 50px;" class="mauticform-input"
                                    type="email"/><br/> <span class="mauticform-errormsg" style="display: none;">This is required.</span>
                        </div>
                        <div id="mauticform_formulairecva_telephone" data-validate="telephone"
                             data-validation-type="plugin.internationalphoneinput"
                             class="mauticform-row mauticform-text mauticform-field-3 mauticform-required"><input
                                    data-field-alias="telephone" id="mauticform_input_formulairecva_telephone"
                                    name="mauticform[telephone]" value="" style="width: 100%; height: 50px;"
                                    class="mauticform-input inttel_formulairecva" type="text"/><br/> <span
                                    class="mauticform-errormsg" style="display: none;">This is required.</span></div>
                        <p>&nbsp;</p>
                        <div id="mauticform_formulairecva_je_minscris__maintenant_p"
                             style="height: 50px; border-radius: 9px; background-color: #008dd2;"
                             class="mauticform-row mauticform-button-wrapper mauticform-field-4">
                            <button type="submit" name="mauticform[je_minscris__maintenant_p]"
                                    id="mauticform_input_formulairecva_je_minscris__maintenant_p" value=""
                                    style="height: 50px; border-radius: 9px; background-color: #008dd2;"
                                    class="mauticform-button">Je m’inscris Maintenant pour faire décoller mon business
                            </button>
                        </div>
                    </div>
                </div>
                <p><input type="hidden" name="mauticform[formId]" id="mauticform_formulairecva_id" value="11"/><br/>
                    <input type="hidden" name="mauticform[return]" id="mauticform_formulairecva_return" value=""/><br/>
                    <input type="hidden" name="mauticform[formName]" id="mauticform_formulairecva_name"
                           value="formulairecva"/></p>
            </form>
        </div>
    </div>
    <div class="wrapper row3">

        <main class="hoc container clear">
            <div class="sectiontitle wow fadeInUp">
                <h4 class="heading">Les candidats Miss shine edition 2022</h4>
            </div>
            <!-- Creative_team_start -->
            <div class="creative-team-area pt-40 pb-40">
                <div class="container-fluid">
                    <div class="row">
                        {% for candidat in candidats %}
                            <div class="col-xl-4 col-lg-6 col-md-6">
                                <div class="team-box ml-4 mb-120">
                                    <div class="single-team wow fadeInUpBig">
                                        <div class="team-top d-flex mb-30">
                                            <div class="team-img">{% if candidat.photo %}
                                                    <img src="{{ asset('uploads/' ~ candidat.photo) }}" width="250"
                                                         height="250"
                                                         class="img-responsive img-rounded">
                                                {% else %}
                                                    <img src="{{ asset('backend/images/default-avatar.png') }}"
                                                         class="img-responsive img-rounded">
                                                {% endif %}</div>
                                            <!-- social-icon -->
                                            <div class="team-social">
                                                <ul>
                                                    <li><a href="#"><i class="fa fa-facebook-f"></i></a></li>
                                                    <li class="active"><a href="#"><i class="fa fa-twitter"></i></a>
                                                    </li>
                                                    <li><a href="#"><i class="fa fa-behance"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="team-bottom">
                                            {% if candidat.position == 1 %}
                                                <span>1ere</span>
                                            {% else %}
                                                <span>{{ candidat.position }} éme</span>
                                            {% endif %}
                                            <h4>{{ candidat.firstname }} {{ candidat.lastname }}</h4>
                                            <span>Nombres de votes: {{ candidat.vote }}</span>
                                            <p>{{ candidat.description }} </p>
                                        </div>
                                        <div class="team-bottom">
                                            <a href="{{ path('showcandidat', {'url': candidat.genericurl }) }}"
                                               class="btn btn-light btn-radius btn-brd grd1 effect-1">Je
                                                vote</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}



